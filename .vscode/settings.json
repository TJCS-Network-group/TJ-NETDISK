{
    "python.formatting.provider": "autopep8",
    "files.autoGuessEncoding": false,
    "files.eol": "\n",
    "[html]": {
        "files.encoding": "utf8"
    },
    "[python]": {
        "files.encoding": "gbk"
    },
    "[plaintext]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "files.encoding": "gbk"
    },
    "[conf]": {
        "files.encoding": "gbk"
    },
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "editor.wordWrap": "on",
        "files.encoding": "utf8"
    },
    "editor.tabSize": 4,
    "editor.formatOnSave": true
}